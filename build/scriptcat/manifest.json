{
    "manifest_version": 2,
    "name": "ScriptCat",
    "version": "0.1.7",
    "description": "脚本猫,一个用户脚本的框架,可编写脚本每天帮你自动处理事务.",
    "background": {
        "page": "background.html"
    },
    "icons": {
        "64": "assets/logo.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "tabs",
        "cookies",
        "storage",
        "webRequest",
        "<all_urls>",
        "notifications",
        "webRequestBlocking"
    ],
    "sandbox": {
        "pages": [
            "sandbox.html"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}