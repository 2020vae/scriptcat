{
    "manifest_version": 2,
    "name": "ScriptCat",
    "version": "0.0.1",
    "description": "",
    "background": {
        "page": "background.html"
    },
    "icons": {
        "64": "assets/logo.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "<all_urls>",
        "notifications",
        "webRequestBlocking"
    ],
    "sandbox": {
        "pages": [
            "sandbox.html"
        ]
    },
    "web_accessible_resources": [
        "sandbox.html"
    ]
}