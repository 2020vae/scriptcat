{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@App/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types/",
      "./src/types"
    ]
  },
  "include": [
    "src",
    "tests"
  ]
}
